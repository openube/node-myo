                        li(data-type="z")
            #gyroscope.info__column
                .info__block
                    p Gyroscope
                    ul.info__list
                        li(data-type="x")
                        li(data-type="y")
                        li(data-type="z")
            #accelerometer.info__column
                .info__block
                    p Accelerometer
                    ul.info__list
                        li(data-type="x")
                        li(data-type="y")
                        li(data-type="z")
            #movement.info__column
                .info__block
                    p Movement
                    ul.info__list
                        li(data-type="roll")
                        li(data-type="pitch")
        .info__console
            #console.info__items
